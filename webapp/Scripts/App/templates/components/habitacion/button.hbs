<div type="button" class="btn btn-default btn-habitacion no-padding" {{action 'selectHab' this.habitacion.Id}}>
    <div class="habitacion hab-container text-center">
        <i class="imac-habitacion"></i>&nbsp;&nbsp;<span class="habitacion-numero">{{this.habitacion.Numero}}</span>&nbsp;&nbsp;
        <span {{bind-attr class=":label this.labelClass :label-cantidad-camas :pull-right"}}>
            {{this.habitacion.CamasDisponibles}}
        </span>
    </div>
    <table class="habitaciones-cama">
        {{#each cama in this.habitacion.camas}}
        {{#unless cama.hide}}
        <tr>
            <td {{bind-attr class="cama.isDisponible:span-icon-paciente-disponible cama.isOcupada:span-icon-paciente-nodisp cama.isBloqueada:span-icon-paciente-bloqueada"}}>
                <div class="cama-num">
                    {{cama.cama}}
                </div>
                <i class="cama-i imac-cama"></i>
            </td>
            <td {{bind-attr class="cama.isMale:icon-paciente-male:icon-paciente-female"}}>
                {{#if cama.pid}}
                <i class="imac-paciente"></i>
                {{/if}}
            </td>
            <td>
                {{#if cama.pid}}
                <div class="paciente">
                    Paciente:&nbsp;&nbsp;<b>{{cama.nombre}}</b>
                </div>
                <div class="paciente">
                    Obra Social:&nbsp;&nbsp;<b>{{cama.obraSocial}}</b>
                </div>
                {{/if}}
            </td>
        </tr>
        {{/unless}}
        {{/each}}
    </table>
</div>